{% extends "dashboard/dashboard_base.jinja" %}

{% block title %}Dashboard{% endblock %}


{% block content %}
<!-- Actual Code -->
<script src="{{static('dashboard/dashboard.js')}}"></script>
<div x-data data-events-url="{{ url('dashboard:dashboard_initial_events') }}"
            data-metrics-url="{{ url('dashboard:dashboard_metric_summary') }}"
    class="min-h-screen bg-base-200"
    @keydown.window="
        if ($event.key === '/') {
            $event.preventDefault();
            $refs.searchQuery.focus();
        }
    ">
    {% include "dashboard/partials/navbar.jinja" %}
    {% include "dashboard/partials/banner.jinja" %}
    <div class="p-6 space-y-6">
        {% include "dashboard/partials/filters.jinja" %}

        <div class="grid grid-cols-1 lg:grid-cols-8 gap-2">
            <div class="lg:col-span-3 space-y-6">
                {% include "dashboard/partials/metrics.jinja" %}
                {% include "dashboard/partials/chart.jinja" %}
            </div>
            <div class="lg:col-span-5">
                {% include "dashboard/partials/table.jinja" %}
            </div>
        </div>
    </div>
    {% include "dashboard/partials/drawer.jinja" %}
</div>


{% endblock %}