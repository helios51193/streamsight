<div class="grid grid-cols-2 gap-4">

    <!-- Total Events -->
    <div class="card bg-base-100 shadow">
        <div class="card-body p-4">
            <p class="text-xs text-base-content/70">Total Events</p>
            <h2 class="text-xl font-semibold" x-text="$store.dashboard.serverMetrics?.total ?? 0"></h2>
        </div>
    </div>

    <!-- Events Per Minute -->
    <div class="card bg-base-100 shadow">
        <div class="card-body p-4">
            <p class="text-xs text-base-content/70">Events / Min</p>
            <h2 class="text-xl font-semibold" x-text="$store.dashboard.serverMetrics?.events_per_minute ?? 0"></h2>
        </div>
    </div>

    <!-- Success Rate -->
    <div class="card bg-base-100 shadow">
        <div class="card-body p-4">
            <p class="text-xs text-base-content/70">Success Rate</p>
            <h2 class="text-xl font-semibold text-success" x-text="($store.serverMetrics?.success_rate ?? 0) + '%'"></h2>
        </div>
    </div>

    <!-- Error Rate -->
    <div class="card bg-base-100 shadow">
        <div class="card-body p-4">
            <p class="text-xs text-base-content/70">Error Rate</p>
            <h2 class="text-xl font-semibold text-error" x-text="($store.serverMetrics?.error_rate ?? 0) + '%'"></h2>
        </div>
    </div>

    <!-- Avg Duration -->
    <div class="card bg-base-100 shadow">
        <div class="card-body p-4">
            <p class="text-xs text-base-content/70">Avg Duration</p>
            <h2 class="text-xl font-semibold" x-text="($store.dashboard.serverMetrics?.avg_duration ?? 0) + ' ms'"></h2>
        </div>
    </div>

    <!-- P95 Duration -->
    <div class="card bg-base-100 shadow">
        <div class="card-body p-4">
            <p class="text-xs text-base-content/70">P95 Duration</p>
            <h2 class="text-xl font-semibold" x-text="($store.dashboard.serverMetrics?.p95_duration ?? 0) + ' ms'"></h2>
        </div>
    </div>
</div>